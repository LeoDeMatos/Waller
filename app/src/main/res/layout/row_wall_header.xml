<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/home_title_horizontal_margin"
        android:layout_marginTop="@dimen/home_title_margin_top"
        android:layout_marginEnd="@dimen/home_title_horizontal_margin"
        android:fontFamily="@font/sf_heavy"
        android:text="@string/app_name"
        android:textColor="@color/dark_87"
        android:textSize="@dimen/font_size_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/home_title_horizontal_margin"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/home_title_horizontal_margin"
        android:fontFamily="@font/sf_regular"
        android:text="@string/unplash_placeholder"
        android:textColor="@color/dark_87"
        android:textSize="@dimen/font_size_subtitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainTitle" />

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="@dimen/search_edit_text_height"
        android:layout_marginTop="@dimen/margin_40dp"
        android:fontFamily="@font/sf_regular"
        android:hint="@string/search_bar_hint"
        android:paddingLeft="@dimen/padding_20dp"
        android:inputType="textCapSentences"
        android:textColor="@color/dark_87"
        android:textColorHint="@color/dark_87"
        app:layout_constraintLeft_toLeftOf="@id/subTitle"
        app:layout_constraintRight_toRightOf="@id/subTitle"
        app:layout_constraintTop_toBottomOf="@id/subTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>